{
    "name": "fabric-workspace-deployment",
    "$schema": "node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "dependsOn": [
                "clean"
            ],
            "options": {
                "commands": [
                    "hatch run build:binary"
                ],
                "parallel": false
            }
        },
        "clean": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "rm -rf build dist src/*/__pycache__ .venv",
                    "hatch env prune",
                    "hatch env create",
                    "hatch run build:clean"
                ],
                "parallel": false
            }
        },
        "run": {
            "executor": "nx:run-commands",
            "dependsOn": [
                "build"
            ],
            "options": {
                "cwd": "dist",
                "commands": [
                    {
                        "command": "./fabric-workspace-deployment",
                        "forwardAllArgs": true
                    }
                ]
            }
        },
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "black --line-length 2000 ."
                ],
                "parallel": false
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "dependsOn": [
                "lint"
            ],
            "options": {
                "commands": [
                    "cp .pypirc ~/.pypirc",
                    "hatch env remove publish",
                    "hatch run publish:release"
                ],
                "parallel": false
            }
        }
    }
}